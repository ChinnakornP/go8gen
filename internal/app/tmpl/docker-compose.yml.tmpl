version: '3.4'

services:

  server:
    image: "{{ .Name }}/server"
    container_name: "{{ .Name }}_container"
    build:
      context: .
      dockerfile: Dockerfile
    entrypoint: ["/home/appuser/app/{{ .Name }}"]
    ports:
      - ${API_PORT}:${API_PORT}

  postgres:
    image: "postgres:13"
    restart: always
    container_name: "go8_postgres"
    environment:
      - POSTGRES_USER=${DB_USER}
      - POSTGRES_PASSWORD=${DB_PASS}
      - POSTGRES_DB=${DB_NAME}
    ports:
      - "5432:5432"
    volumes:
      - postgres13go8db:/var/lib/postgresql/data

  mariadb:
    image: "mariadb:10"
    restart: always
    container_name: "go8_mariadb"
    environment:
      - MYSQL_USER=${DB_USER}
      - MYSQL_ROOT_PASSWORD=${DB_PASS}
      - MYSQL_DATABASE=${DB_NAME}
    ports:
      - "3306:3306"
    volumes:
      - mariadb10go8db:/var/lib/mysql/data

volumes:
  postgres13go8db:
  mariadb10go8db: